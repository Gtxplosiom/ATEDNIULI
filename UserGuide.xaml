                               FontSize="16" 
                               FontStyle="Italic" 
                               Margin="0,0,0,20" />
                    <TextBlock Name="State5e" Text="Great! Now try closing the application by subtituting 'close app' with 'terminate app' or 'exit app'" 
                               FontSize="16" 
                               Visibility="Collapsed"
                               Margin="0,0,0,5" />
                    <TextBlock Name="State5f" Text="Great! To proceed, say 'TRML next'" 
                               FontSize="16" 
                               FontStyle="Italic"
                               Visibility="Collapsed"
                               Margin="0,20,0,0" />
                </StackPanel>

                <!-- Right Section -->
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20">
                    <!-- Simulated Device Section -->
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="10" Width="300" Height="400">
                        <Image Source="assets/sample_device_screenshot.png" Stretch="Uniform" />
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- State 8 -->
        <DataTemplate x:Key="State8">
            <Grid>
                <!-- Left Section -->
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20">
                    <TextBlock Name="State5a" Text="QUICK WEB SEARCHING" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="Black" 
                       Margin="0,0,0,10" />
                    <TextBlock Name="State5b" Text="ATEDNIULI is not very strict on the word of commands. You can say words that are similar to the command you are going to do." 
                       FontSize="18" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,10" />
                    <TextBlock Name="State5c" Text="Like for example when opening an app instead of saying open, you can either say; activate, show, or nay similar  word to the command" 
                       FontSize="16" 
                       Margin="0,0,0,5" />
                    <TextBlock Name="State5d" Text="Open microsoft word. instead of saying 'open word' try substituting with 'activate word' or 'show word'" 
                       FontSize="16" 
                       FontStyle="Italic" 
                       Margin="0,0,0,20" />
                    <TextBlock Name="State5e" Text="Great! Now try closing the application by subtituting 'close app' with 'terminate app' or 'exit app'" 
                       FontSize="16" 
                       Visibility="Collapsed"
                       Margin="0,0,0,5" />
                    <TextBlock Name="State5f" Text="Great! To proceed, say 'TRML next'" 
                       FontSize="16" 
                       FontStyle="Italic"
                       Visibility="Collapsed"
                       Margin="0,20,0,0" />
                </StackPanel>

                <!-- Right Section -->
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20">
                    <!-- Simulated Device Section -->
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="10" Width="300" Height="400">
                        <Image Source="assets/sample_device_screenshot.png" Stretch="Uniform" />
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="assets/ATEDNIULI_bg.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <!-- Transparent White Panel -->
        <Border Width="1350" Height="720" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Background="#9FFFFFFF" 
                CornerRadius="5">
            <!-- Content Control to Switch States -->
            <ContentControl x:Name="StateControl" />
        </Border>
    </Grid>
</Window>
